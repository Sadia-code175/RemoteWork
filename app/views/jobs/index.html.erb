
<h1>Jobs Matching Your Skills</h1>

<%= form_tag search_jobs_path, method: :get do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search jobs..." %>
  <%= submit_tag "Search" %>
<% end %>

<% @jobs.each do |job| %>
  <div class="job-card">
    <h3><%= job.title %></h3>
    <p><strong>Company:</strong> <%= job.hiring_client_profile.company_name %></p>
    <p><strong>Salary:</strong> $<%= job.salary %></p>
    <p><strong>Requirements:</strong> <%= job.requirements %></p>
    <p><strong>Skills Required:</strong> <%= job.skills_required %></p>
    
    <%= button_to "Apply", apply_job_path(job), method: :post %>
  </div>
<% end %>