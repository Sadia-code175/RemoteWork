
<%= form_for @profile, url: profile_path, method: :patch do |f| %>
  <div class="field">
    <%= f.label :company_name %><br>
    <%= f.text_field :company_name %>
  </div>
  
  <div class="field">
    <%= f.label :website %><br>
    <%= f.text_field :website, placeholder: "https://" %>
  </div>
  
  <div class="field">
    <%= f.label :company_details %><br>
    <%= f.text_area :company_details, placeholder: "Describe your company" %>
  </div>
  
  <div class="actions">
    <%= f.submit "Update Profile" %>
  </div>
<% end %>