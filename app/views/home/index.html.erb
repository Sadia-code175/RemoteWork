
<% if user_signed_in? %>
  <h1>Welcome, <%= current_user.username %>!</h1>
  <p>You are logged in as <%= current_user.role %>.</p>
  <% if user_signed_in? %>
  <%= link_to "Sign Out", destroy_user_session_path, method: :delete, data: { turbo_method: :delete } %>
<% end %>
<% else %>
  <h1>Welcome to Freelancer App</h1>
  <p><%= link_to "Sign up", new_user_registration_path %></p>
  <p><%= link_to "Sign in", new_user_session_path %></p>
<% end %>